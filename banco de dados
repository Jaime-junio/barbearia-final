create database barbearia;

use barbearia;

CREATE TABLE usuarios (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nome VARCHAR(100) NOT NULL,
    email VARCHAR(100) NOT NULL,
	senha VARCHAR(255) NOT NULL,
    nivel enum('administrador', 'barbeiro')
);

CREATE TABLE barbeiros (
    id_barbeiro INT AUTO_INCREMENT PRIMARY KEY,
    id_usuario INT,
    especialidade VARCHAR(100),
    disponibilidade BOOLEAN DEFAULT true,
    foto VARCHAR(255),
    FOREIGN KEY (id_usuario) REFERENCES usuarios(id)
);

CREATE TABLE administradores (
    id_administrador INT PRIMARY KEY AUTO_INCREMENT,
    id_usuario INT,
    FOREIGN KEY (id_usuario) REFERENCES usuarios(id)
);


CREATE TABLE SERVICOS(
    id INT PRIMARY KEY AUTO_INCREMENT,
    titulo VARCHAR(1000),
    preco DECIMAL(50),
    paragrafo VARCHAR(1000),
    foto VARCHAR(255)
);

CREATE TABLE posts(
    id INT PRIMARY KEY AUTO_INCREMENT,
    titulo VARCHAR(1000),
    paragrafo TEXT,
    linha TEXT,
    tipo ENUM ('postagem', 'promocao', 'outracoisa')
);

CREATE TABLE agendamentos (
    numero INT PRIMARY KEY AUTO_INCREMENT,
    nome_cliente VARCHAR(100) NOT NULL,
    id_barbeiro INT,
    nome_barbeiro VARCHAR(100),
    data DATE NOT NULL,
    horario TIME NOT NULL,
    situacao ENUM('pago', 'pendente', 'cancelado') NOT NULL DEFAULT 'pendente',
    FOREIGN KEY (id_barbeiro) REFERENCES barbeiros(id_barbeiro)
);
